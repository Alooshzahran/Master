@model IEnumerable<master1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}


<div style="display:flex;flex-direction:row;justify-content:space-around">
    <h2>Categories</h2>
    <h2>No. of Categories : @Model.Count()</h2>
    
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
 Category Name
        </th>
        <th>
          Category Discription
        </th>
        <th>
     Categorie Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDiscription)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.CategorieImage)*@
            <img src='../photos/@item.CategorieImage' style="width: 100px;height:100px" class="thumbnail" />

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID } ,new { @class="btn btn-success"}) |
            @Html.ActionLink("Details", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
