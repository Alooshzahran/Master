@model master1.Models.Order

@{
    ViewBag.Title = "checkout";
}
<head>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<style>
    body {
        background-image: url('../../photos/background.jfif');
        /* background-size: cover;
        background-repeat: no-repeat;*/
        width: 100%;
    }

    form {
        margin: 5% 15% 5% 15%;
        background-color: white;
    }

    table {
        width: 75%;
        margin-left: 13%;
        height: 500px;
        /*        background-color:antiquewhite;   */
    }

    footer {
        background-color: white;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class="control-label col-md-2" value="name">Name</p>
            <div class="col-md-10">
                <input id="Text1" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2" name="">Email</p>
            <div class="col-md-10">
                <input id="email" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2" name="">Phone</p>
            <div class="col-md-10">
                <input id="phone" type="text" class="form-control" />
            </div>
        </div>

        @*<div class="form-group">
                <p class="control-label col-md-2" name="">Location</p>
                <div class="col-md-10">
                    <input id="loc" type="text" class="form-control" />
                </div>
            </div>*@


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="submit" type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Home", "container")
</div>
@if (ViewBag.accept == "true")
{

<script>
   
    function mess() {
        swal("success!", "Your Order sent to Pharmcy!", "success");
        setTimeout(back, 10000);
    }
    mess();
    function back(){
        window.location.assign("/container/Home")
    }
</script>
}

