@model master1.Models.ProductsinCart
@{
    ViewBag.Title = "singlecard";
    Layout = "~/Views/Shared/_masterpage.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                @foreach (var x in ViewBag.prod)
                {
                    <div class="col-md-12 mb-0">
                        <a href="@Url.Action("Home", "container")">Home</a> <span class="mx-2 mb-0">/</span> <a href="@Url.Action("shop", "container")">Store</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@x.product_name</strong>
                    </div>}
                </div>
        </div>
    </div>

    <div class="site-section">
        <div class="container">
            @foreach (var x in ViewBag.prod)
            {


                <div class="row">
                    <div class="col-md-5 mr-auto">
                        <div class="border text-center">
                            <img src="/photos/@x.product_image" alt="Image" class="img-fluid p-5">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h2 class="text-black">@x.product_name</h2>
                        <p>
                            @x.product_description
                        </p>


                        <p><strong class="text-primary h4">@x.product_price</strong></p>



                        <div class="mb-5">
                            <div class="input-group mb-3" style="max-width: 220px;">
                                <div class="input-group-prepend">
                                    <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                                </div>
                                @*<input type="text" class="form-control text-center" value="1" placeholder=""
        aria-label="Example text with button addon" aria-describedby="button-addon1">*@
                                @Html.EditorFor(model => model.productquantity, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.productquantity, "", new { @class = "text-danger" })

                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                                </div>
                            </div>

                        </div>
                        <input type="submit" value="Add To Cart" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary" />
                    </div>
                </div>
            }
        </div>

    </div>
}

